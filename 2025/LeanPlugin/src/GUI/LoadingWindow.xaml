<Window x:Class="YANUSConnector.GUI.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent"
        Width="300" Height="150">
    <Grid>
        <Border Background="White" CornerRadius="10" Padding="20">
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Image  Source="/YANUSConnector;component/Resources/logo_yanus2.png" 
 Width="50" Height="50" Margin="0,0,0,0"/>

                <TextBlock Text="Sending..." FontSize="16" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <ProgressBar IsIndeterminate="True" Foreground="Black" Width="200" Height="10"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>